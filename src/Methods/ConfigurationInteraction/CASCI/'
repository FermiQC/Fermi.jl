using Combinatorics
using SparseArrays
using TensorOperations
using LinearAlgebra
using ArnoldiMethod

function CASCI{T}(Alg::ACI) where T <: AbstractFloat
    # we need this implementation
    @output "Getting molecule...\n"
    #molecule = Molecule()
    @output "Computing AO Integrals...\n"
    #aoint = ConventionalAOIntegrals()

    @output "Calling RHF module...\n"
    refwfn = Fermi.HartreeFock.RHF()
    CASCI{T}(refwfn, Alg)
end

function CASCI{T}(refwfn::Fermi.HartreeFock.RHF, Alg::ACI; ci = nothing) where T <: AbstractFloat
    @output "Generating Integrals for CAS computation...\n"
    #aoint = ConventionalAOIntegrals()
    ints = refwfn.ints
    @output "Transforming Integrals for CAS computation...\n"
    frozen = Fermi.CurrentOptions["cas_frozen"]

    nmo = refwfn.ndocc + refwfn.nvir

    act_elec = 2*(refwfn.ndocc - frozen)

    if act_elec < 0
        error("\nInvalid number of frozen orbitals ($frozen) for $(2*refwfn.ndocc) electrons.")
    end

    # Active = -1 means FCI, with frozen
    if Fermi.CurrentOptions["cas_active"] == -1
        active = nmo - frozen
    else
        active = Fermi.CurrentOptions["cas_active"]
    end

    if active ‚â§ act_elec/2
        error("\nNumber of active orbitals ($active) too small for $(act_elec) active electrons")
    end

    if active+frozen > nmo
        error("\nNumber of active ($active) and frozen orbitals ($frozen) greater than number of orbitals ($nmo)")
    end

    s = 1:(frozen+active)

    h = T.(Fermi.Integrals.transform_fock(ints["T"] + ints["V"], ints.C["C"][:,s], ints.C["C"][:,s]))
    V = T.(Fermi.Integrals.transform_eri(ints["Œº"], ints.C["C"][:,s], ints.C["C"][:,s], ints.C["C"][:,s], ints.C["C"][:,s]))

    aoint = nothing

    aoint = nothing
    CASCI{T}(refwfn, h, V, frozen, act_elec, active, Alg, ci=ci)
end

function CASCI{T}(refwfn::Fermi.HartreeFock.RHF, h::Array{T,2}, V::Array{T,4}, frozen::Int, act_elec::Int, active::Int, Alg::ACI; ci=nothing) where T <: AbstractFloat

    # Print intro
    Fermi.ConfigurationInteraction.print_header()
    ttotal = @elapsed begin
    @output "\n    ‚Ä¢ Computing FCI with the ACI algorithm.\n\n"
    act_range = (frozen+1):(active+frozen)
    œÉ = Fermi.CurrentOptions["œÉ"]
    Œ≥ = Fermi.CurrentOptions["Œ≥"]
    pe = Fermi.CurrentOptions["aci_print_screen"]

    @output "\n ‚Üí  ACTIVE SPACE\n"
    @output "Frozen Orbitals:  {:3d}\n" frozen
    @output "Active Electrons: {:3d}\n" act_elec
    @output "Active Orbitals:  {:3d}\n" active

    # Start reference space as HF
    zeroth = repeat('1', frozen)*repeat('1', Int(act_elec/2))
    if ci == nothing
        P = [Determinant(zeroth, zeroth)]
        Pcoef = [1.0]
    else
        P = deepcopy(ci.dets)
        Pcoef = deepcopy(ci.coef)
    end
    E = refwfn.energy - refwfn.molecule.Vnuc
    ŒîE = 1.0
    ite = 1

    @output repeat("=",50)*"\n"
    NŒ± = Int(act_elec/2)
    NŒ≤ = Int(act_elec/2)
    Lenny = length(P)
    M = nothing
    œµsum = nothing
    œµest = nothing
    oldP = nothing
    cflag = true
    while true
        if ite > 20
            break
        end
        @output " ‚Üí Iteration {}\n\n" ite
        @output "   ‚Ä¢ P\n"
        @output "Initial model space size: {}\n\n" length(P)

        @output "   ‚Ä¢ P ‚áí F\n"
        @output "Generating First Order Interacting Space...\n"
        t = @elapsed F = get_fois(P, NŒ±, NŒ≤, act_range)
        @output "FOIS size:                {}\n" length(F)
        @output "FOIS contructed in {:5.5f} s.\n\n" t

        @output "   ‚Ä¢ F ‚áí Q\n"
        @output "Screening FOIS using 2-D Hamiltonian\n" œÉ
        t = @elapsed Fe = œµI(F, P, Pcoef, E, h, V, act_elec, active)
        @output "Screen complete in {:5.5} s.\n" t
        @output "Sorting F space...\n"
        _t = @elapsed begin
            Fperm = zeros(Int, length(Fe))
            sortperm!(Fperm, Fe, by=abs)
            reverse!(Fperm)
            Fe = Fe[Fperm]
            F = F[Fperm]
        end
        @output "Sorted in {:5.5f} s.\n" _t
        @output "Filtering F..."
        t = @elapsed begin
        œµest = 0.0
        œµsum = 0.0
        while true
            if length(Fe) == 0 
                #then no determinants were deemed important - exit ACI
                break
            end
            if œµsum ‚â§ œÉ
                œµest += Fe[end]
                œµsum += abs(Fe[end])
                pop!(Fe)
                pop!(F)
            else
                œµest -= Fe[end]
                œµsum -= abs(Fe[end])
                break
            end
        end
        end
        @output " Secondary space (Q) built in {:5.5f}\n\n" t
        @output "Size of Q {}\n" length(Fe)

        @output "   ‚Ä¢ M = P ‚à™ Q\n"
        ŒîE = -E
        M = vcat(P, F)
        @output "Model space size: {}\n" length(M)
        @output "Updating model space...\n" length(M)
        t = @elapsed E, Pcoef, P = update_model_space(M, h, V)
        @output " Model space updated in {:5.5f}\n" t
        ŒîE += E
        @output "Model Space Energy           {:15.10f}\n" E + refwfn.molecule.Vnuc
        @output "Energy Change                {:15.10f}\n" ŒîE

        if oldP == Set(P) 
            break
        end
        oldP = Set(deepcopy(P))
        Lenny = length(P)
        @output "Coarse graining model space for next iteration\n"
        # Coarse grain
        Cperm = zeros(Int, length(P))
        sortperm!(Cperm, Pcoef, by=i->i^2)
        reverse!(Cperm)

        Pcoef = Pcoef[Cperm]
        P = P[Cperm]

        while true
            if sum(Pcoef[1:end-1].^2) >= 1-Œ≥*œÉ
                pop!(Pcoef)
                pop!(P)
            else
                break
            end
        end
        @output "Final coarse grained model space size is {}\n" length(P)
        @output repeat("=",50)*"\n"
        ite += 1
    end
    end #@elapsed

    @output repeat("=",50)*"\n"
    if cflag
        @output "üî•üî•üî•üî•üî• ACI procedure has converged. üî•üî•üî•üî•üî•\n"
    else
        @output "üò≤üò≤üò≤üò≤üò≤ ACI procedure has failed!!!! üò≤üò≤üò≤üò≤üò≤\n"
    end
    @output "Computation finished in {:5.5} seconds.\n" ttotal
    @output "Model space size: {}\n" length(M)
    @output "E[ACI:{}]     = {:15.10f}\n" œÉ E + refwfn.molecule.Vnuc
    @output "E[ACI:{}]+PT2 = {:15.10f}\n" œÉ E + refwfn.molecule.Vnuc + œµest
    @output repeat("=",51)*"\n\n"
    E = (E+refwfn.molecule.Vnuc)

    @output "\n ‚Ä¢ Most important determinants:\n\n"

    for i in 1:(min(20,length(P)))
        @output "{:15.5f}      {}\n" Pcoef[i]  detstring(P[i], frozen+active)
    end
    
    CASCI{T}(refwfn, E, P, Pcoef)
end

@fastmath @inbounds function get_fois(dets::Array{Determinant,1}, NŒ±::Int, NŒ≤::Int, act_range::UnitRange{Int64})::Array{Determinant,1}

    # Ns must be > 1
    Œ±occs = [zeros(Int,NŒ±) for i=1:Threads.nthreads()]
    Œ≤occs = [zeros(Int,NŒ≤) for i=1:Threads.nthreads()]
    Œ±unos = [zeros(Int,length(act_range)-NŒ±) for i=1:Threads.nthreads()]
    Œ≤unos = [zeros(Int,length(act_range)-NŒ≤) for i=1:Threads.nthreads()]

    lf_per_det = (length(Œ±occs[1])^2*length(Œ±unos[1])^2 + length(Œ±occs[1])*length(Œ±unos[1])
                       + length(Œ≤occs[1])^2*length(Œ≤unos[1])^2 + length(Œ≤occs[1])*length(Œ≤unos[1])
                       + length(Œ±occs[1])*length(Œ±unos[1])*length(Œ≤occs[1])*length(Œ≤unos[1]))
    lf_crit = Int(round(length(dets)*lf_per_det))
    fois = [Determinant(0,0) for i=1:lf_crit]
    @sync for _DI in eachindex(dets)
        Threads.@spawn begin
            d = dets[_DI]
            DI = (_DI-1)*lf_per_det + 1
            ct = 0
            id = Threads.threadid()
            Œ±occ = Œ±occs[id]
            Œ≤occ = Œ≤occs[id]
            Œ±uno = Œ±unos[id]
            Œ≤uno = Œ≤unos[id]
            Œ±occ!(d, act_range, Œ±occ)
            Œ≤occ!(d, act_range, Œ≤occ)
            Œ±vir!(d, act_range, Œ±uno)
            Œ≤vir!(d, act_range, Œ≤uno)
            # Get Œ±Œ± -> Œ±Œ± excitations
            for i in Œ±occ
                for a in Œ±uno
                    newŒ± = (d.Œ± ‚äª (1<<(i-1))) | (1<<(a-1)) 
                    _det = Determinant(newŒ±, d.Œ≤)
                    fois[DI+ct] = _det
                    ct += 1
                    for j in Œ±occ
                        if j ‚â• i
                            break
                        end
                        for b in Œ±uno
                            if b ‚â• a
                                break
                            end
                            newestŒ± = (newŒ± ‚äª (1<<(j-1))) | (1<<(b-1)) 
                            _det = Determinant(newestŒ±, d.Œ≤)
                            fois[DI+ct] = _det
                            ct += 1
                        end
                    end
                end
            end
            # Get Œ≤Œ≤ -> Œ≤Œ≤ excitations
            for i in Œ≤occ
                for a in Œ≤uno
                    newŒ≤ = (d.Œ≤ ‚äª (1<<(i-1))) | (1<<(a-1)) 
                    _det = Determinant(d.Œ±, newŒ≤)
                    fois[DI+ct] = _det
                    ct += 1
                    for j in Œ≤occ
                        if j ‚â• i
                            break
                        end
                        for b in Œ≤uno
                            if b ‚â• a
                                break
                            end
                            newestŒ≤ = (newŒ≤ ‚äª (1<<(j-1))) | (1<<(b-1)) 
                            _det = Determinant(d.Œ±, newestŒ≤)
                            fois[DI+ct] = _det
                            ct += 1
                        end
                    end
                end
            end
            # Get Œ±Œ≤ -> Œ±Œ≤ excitations
            for i in Œ±occ
                for a in Œ±uno
                    for j in Œ≤occ
                        for b in Œ≤uno
                            newŒ± = (d.Œ± ‚äª (1<<(i-1))) | (1<<(a-1)) 
                            newŒ≤ = (d.Œ≤ ‚äª (1<<(j-1))) | (1<<(b-1)) 
                            _det = Determinant(newŒ±, newŒ≤)
                            fois[DI+ct] = _det
                            ct += 1
                        end
                    end
                end
            end
        end #Threads.@spawn 
    end
    fois = filter((x)->x != Determinant(0,0), fois)
    fois = Set(fois)
    setdiff!(fois, dets)
    fois = collect(fois)
    return fois end

@fastmath @inbounds function œµI(Fdets, P::Array{Determinant,1}, Pcoef::Array{Float64,1}, Ep::T, h::Array{T,2}, V::Array{T,4},act_elec,active) where T <: AbstractFloat
    N = count_ones(P[1].Œ±) #number of electrons (assumes RHF)
    Ne = N*2
    Fe = zeros(length(Fdets))
    Vints = zeros(length(Fdets))
    Œ±ind = zeros(Int64,N)
    Œ≤ind = zeros(Int64,N)
    for i in eachindex(Fdets)
        Œ±index!(Fdets[i], Œ±ind)
        Œ≤index!(Fdets[i], Œ≤ind)
        Ei = Hd0(Œ±ind, Œ≤ind, h, V)
        Fe[i] = Ei - Ep #Œî
    end
    #Ne = count_ones(Fdets[1].Œ±)
    A = BitArray(undef,active)
    ae2 = Int(act_elec/2)
    A[1:ae2] .= 1
    oo = permutations(A)
    A[ae2-1:ae2] .= 0
    ss = permutations(A)
    aa = (Base.product(ss,oo))
    bb = (Base.product(oo,ss))
    A[ae2-1:ae2-1] .= 1
    os = permutations(A)
    ab = (Base.product(os,os))
    ba = (Base.product(os,os))
    #aa = Base.Iterators.flatten(aa)
    #bb = Base.Iterators.flatten(bb)
    #ab = Base.Iterators.flatten(ab)
    #ba = Base.Iterators.flatten(ba)
    aa = collect(aa)
    bb = collect(bb)
    ab = collect(ab)
    ba = collect(ba)
    #residues = Set(vcat(aa,bb,ab,ba))
    residues = Set((BitArray(res[1]),BitArray(res[2])) for res in aa)
    resF = Dict(residues .=> Set(Int64[] for i in length((residues))))
    resP = Dict(residues .=> Set(Int64[] for i in length((residues))))

    # bit arrays for Fdet info
    DFa = BitArray(undef,active)
    DFb = BitArray(undef,active)
    ncore = Ne - act_elec
    core = BitArray(undef,ncore)
    core[:] .= 1
    for i in eachindex(Fdets)
        dF = Fdets[i]
        DFa.chunks[1] = (dF.Œ± >> (ncore))
        DFb.chunks[1] = (dF.Œ≤ >> (ncore))
        for res in keys(resF)
            if count_ones(DFa.chunks[1] ‚äª res[1].chunks[1]) + count_ones(DFb.chunks[1] ‚äª res[2].chunks[1]) == 4
                push!(resF[res],i)
            end
        end
    end
    for i in eachindex(P)
        dF = Fdets[i]
        DFa.chunks[1] = dF.Œ± >> (Ne-act_elec )
        DFb.chunks[1] = dF.Œ≤ >> (Ne-act_elec )
        for res in keys(resP)
            if count_ones(DFa.chunks[1] ‚äª res[1].chunks[1]) + count_ones(DFb.chunks[1] ‚äª res[2].chunks[1]) == 4
                push!(resP[res],i)
            end
        end
    end
    detpairs = []
    println("At detpairs")
    println(resF)
    for i in eachindex(residues)
        #detpairs = union(detpairs,Base.product(resF[res],resP[res]))
        res = residues[i]
        #prod = collect(Base.product(resF[res],resP[res]))
        push!(detpairs,Base.product(resF[res],resP[res]))
    end
    println("forming union")
    detpairs = Set(detpairs)
    println("After detpairs")
    for detpair in detpairs
        #D1a = (detpair[1][1].chunks[1] << ncore) & core
        #D1b = (detpair[1][2].chunks[1] << ncore) & core
        #D2a = (detpair[2][1].chunks[1] << ncore) & core
        #D2b = (detpair[2][2].chunks[1] << ncore) & core
        #D1 = Determinant(D1a,D1b)
        #D2 = Determinant(D2a,D2b)
        D1 = Fdets[detpair[1]]
        D2 = P[detpair[2]]
        Œ±exc = Œ±excitation_level(D1,D2)
        Œ≤exc = Œ≤excitation_level(D1,D2)
        el = Œ±exc + Œ≤exc
        if el == 2
            Vints[detpair[1]] += Pcoef[j]*Hd2(D1, D2, V, Œ±exc)
        elseif el == 1
            Vints[detpair[1]] += Pcoef[j]*Hd1(Œ±ind, Œ≤ind, D1, D2, h, V, Œ±exc)
        end
    end
    Fe .= Fe./2 .- .‚àö((Fe.^2)./4 .+ Vints.^2)
        

    #N = sum(Œ±list(P[1]))
    #Œ±inds = [Array{Int64,1}(undef,N) for i=1:Threads.nthreads()]
    #Œ≤inds = [Array{Int64,1}(undef,N) for i=1:Threads.nthreads()]
    #@sync for i in eachindex(Fdets)
    #    Threads.@spawn begin
    #    D1 = Fdets[i]
    #    id = Threads.threadid()
    #    Œ±ind = Œ±inds[id]
    #    Œ≤ind = Œ≤inds[id]
    #    Œ±index!(D1, Œ±ind)
    #    Œ≤index!(D1, Œ≤ind)
    #    Ei = Hd0(Œ±ind, Œ≤ind, h, V)
    #    Œî = Ei - Ep
    #    Vint = 0.0
    #    for j in eachindex(P)
    #        D2 = P[j]
    #        Œ±exc = Œ±excitation_level(D1,D2)
    #        Œ≤exc = Œ≤excitation_level(D1,D2)
    #        el = Œ±exc + Œ≤exc
    #        if el > 2
    #            continue 
    #        elseif el == 2
    #            Vint += Pcoef[j]*Hd2(D1, D2, V, Œ±exc)
    #        elseif el == 1
    #            Vint += Pcoef[j]*Hd1(Œ±ind, Œ≤ind, D1, D2, h, V, Œ±exc)
    #        end
    #    end
    #    
    #    @fastmath Fe[i] = Œî/2 - ‚àö((Œî^2)/4 + Vint^2)
    #    end #Threads.@spawn
    #end
    #return Fe
end

function update_model_space(M::Array{Determinant,1}, h::Array{T,2}, V::Array{T,4}) where T <: AbstractFloat

    M = complete_set(M)
    H = get_sparse_hamiltonian_matrix(M, h, V, Fermi.CurrentOptions["cas_cutoff"])

    @output "Diagonalizing Hamiltonian...\n"
    decomp, history = partialschur(H, nev=1, tol=10^-12, which=LM())
    Œª, œï = partialeigen(decomp)
    #Œª,œï = eigen(Array(H))

    return Œª[1], œï[:,1], deepcopy(M)
end


function incomp(dets::Array{Determinant,1})

    ming = 0
    for d in dets

        _det = Determinant(d.Œ≤, d.Œ±)
        if !(_det in dets)
            ming += 1
        end
    end

    return ming
end

function complete_set(dets::Array{Determinant,1})

    newdets = [Determinant[] for i = 1:Threads.nthreads()]
    @Threads.threads for d in dets
        
        asym = d.Œ± ‚äª d.Œ≤
        if asym == 0
            continue
        end

        sym = d.Œ± & d.Œ≤

        n = count_ones(asym)
        e = Int(n/2)
        idx = Int[]

        str = vcat(repeat([1],e), repeat([0],e))
        perms = multiset_permutations(str, n)
        
        i = 1
        while i ‚â§ asym
            if 1<<(i-1) & asym ‚â† 0
                push!(idx, i) 
            end
            i += 1
        end

        for p in perms
            newŒ± = sym
            newŒ≤ = sym
            for (x,i) in zip(p,idx)
                if x == 1
                    newŒ± = newŒ± | (1<<(i-1))
                elseif x == 0
                    newŒ≤ = newŒ≤ | (1<<(i-1))
                end
            end
            push!(newdets[Threads.threadid()], Determinant(newŒ±, newŒ≤))
        end
    end
    newdets = vcat(newdets...)
    return unique(vcat(dets,newdets))
end
